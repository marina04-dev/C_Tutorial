/* exercise 1.2-mode "r+" */
#include <stdio.h>
#include <stdlib.h>



int main() {
    FILE *fp;
    
    
    fp=fopen("temp.txt","w");
    if (!fp) exit(0);
    
    fprintf(fp,"0123456789");
    
    fclose(fp);
    fp=fopen("temp.txt","r+");
    printf("POS=%ld",ftell(fp));
    
    while (!feof(fp)) {
        printf("%c",fgetc(fp));
    }
    printf("POS=%ld",ftell(fp));
    rewind(fp);
    fprintf(fp,"XXXX");
    rewind(fp);
    while (!feof(fp)) {
        printf("%c",fgetc(fp));
    }
    fclose(fp);
    
    
    
    
}
